@model WhiteLagoon.Domain.Entities.Villa

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Villa</h2>
			</div>
		</div>
	</div>

	<div class="card-body border p-4">
		<form method="post" class="row">
			<input asp-for="Id" hidden />
			<div class="col-10">
				<div class="p-3">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="form-floating py-2 col-12">
					<input disabled asp-for="Name" class="form-control border shadow" />
					<label asp-for="Name" class="m-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input disabled asp-for="Description" class="form-control border shadow" />
					<label asp-for="Description" class="m-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input disabled asp-for="Price" class="form-control border shadow" />
					<label asp-for="Price" class="m-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input disabled asp-for="Sqft" class="form-control border shadow" />
					<label asp-for="Sqft" class="m-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input disabled asp-for="Occupancy" class="form-control border shadow" />
					<label asp-for="Occupancy" class="m-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input disabled asp-for="ImageUrl" class="form-control border shadow" />
					<label asp-for="ImageUrl" class="m-2"></label>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger w-100">
							<i class="bi bi-trash-fill"></i> Delete
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Villas" asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i> Cancel
						</a>
					</div>
				</div>
				</div>
			</div>
			<div class="col-2">
				<img src="@Model.ImageUrl" class="img-fluid rounded" style="min-height: 100px;" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}